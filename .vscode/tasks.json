{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [

        // Server Tasks

        {
            "label": "serve",
            "type": "shell",
            "command": "make serve",
            "problemMatcher": "$eslint-stylish",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "serve-test",
            "type": "shell",
            "command": "make serve-test",
            "problemMatcher": "$eslint-stylish"
        },

        // Build Tasks

        {
            "label": "build",
            "type": "shell",
            "command": "make build-release",
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "make build-test",
            "problemMatcher": "$eslint-stylish"
        }
    ]
}